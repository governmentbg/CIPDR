@using URegister.Core.Models.Service
@model ServiceVM

@{
    ViewBag.Title = Model.IsInsert ? "Добавяне на тип услуга" : "Редакция на тип услуга";
    var htmlFieldPrefix = ViewData.TemplateInfo.HtmlFieldPrefix;
}

<div class="ui grid">   
    <form id="formService" class="ui sixteen wide column" action="Edit" method="post" enctype="multipart/form-data">
        <div class="content">           
            <div class="column ui segment green">
                <div class="ui form">
                    @Html.HiddenFor(model => model.Id)
                    <div class="fields">
                        <div class='sixteen wide field'>
                            @Html.EditorFor(model => model.Name, "String")
                        </div>
                    </div>
                    <div class="fields">
                        <div class='sixteen wide field'>
                            @Html.EditorFor(model => model.ServiceTypeId, "DropDownInt", new{ @class="service-type-id"})
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="column ui segment green">
                <div class="ui form">
                    <div class="fields">
                        <div class='sixteen wide field step-list'>
                            @await Html.PartialAsync("_StepList", Model)
                        </div>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("_BackSubmitButton", @Url.Action("Index"))
        </div>
    </form>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <link href="~/lib/jqueryui/themes/smoothness/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/js/Admin/service/serviceEdit.js" asp-append-version="true"></script>

}
