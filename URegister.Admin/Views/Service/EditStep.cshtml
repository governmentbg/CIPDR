@using URegister.Admin.Models.Service
@model StepVM

@{
    ViewBag.Title = Model.IsInsert ? "Добавяне на стъпка" : "Редакция на стъпка";
    var htmlFieldPrefix = ViewData.TemplateInfo.HtmlFieldPrefix;
    var codeEditor = Model.IsInsert ? "String" : "StringDisabled";
}
<div class="ui grid">   
    <form class="ui sixteen wide column" action="EditStep" method="post" enctype="multipart/form-data">
        <div class="content">           
            <div class="column ui segment green">
                <div class="ui form">
                    @Html.HiddenFor(model => model.Id)
                    <div class="fields">
                        <div class='sixteen wide field'>
                            @Html.EditorFor(model => model.Name, "String")
                        </div>
                    </div>
                    <div class="fields">
                        <div class='sixteen wide field'>
                            @Html.EditorFor(model => model.Type)
                        </div>
                    </div>
                    <div class="fields">
                        <div class='sixteen wide field'>
                            @Html.EditorFor(model => model.Method)
                        </div>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("_BackSubmitButton", @Url.Action("IndexStep"))
        </div>
    </form>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}